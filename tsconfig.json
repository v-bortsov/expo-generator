{
  "extends": "expo/tsconfig.base",
  "isolatedModules": true,
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": false,
    "types": [
      "jest"
    ],
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ],
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "./next-env.d.ts",
      "./react-app-env.d.ts",
    ]
  },
  "include": [
    "next-env.d.ts",
    "react-app-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
]
}
